<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nus.zkk.bodhifiles_system.mapper.FileInfoMapper">
    <resultMap id="FileInfoResultMap" type="com.nus.zkk.bodhifiles_system.entity.FileInfo">
        <id column="id" property="id"/>
        <result column="user_id" property="user_id"/>
        <result column="parent_id" property="parent_id"/>
        <result column="TENANT_ID" property="TENANT_ID"/>
        <result column="REVISION" property="REVISION"/>
        <result column="CREATED_BY" property="CREATED_BY"/>
        <result column="CREATED_TIME" property="CREATED_TIME"/>
        <result column="UPDATED_BY" property="UPDATED_BY"/>
        <result column="UPDATED_TIME" property="UPDATED_TIME"/>
        <result column="url" property="url"/>
        <result column="name" property="name"/>
        <result column="file_name" property="file_name"/>
        <result column="suffix" property="suffix"/>
        <result column="is_img" property="is_img"/>
        <result column="size" property="size"/>
        <result column="type" property="type"/>
        <result column="put_time" property="put_time"/>
        <result column="is_dir" property="is_dir"/>
        <result column="source" property="source"/>
    </resultMap>
    <!-- 查询用户文件列表 -->
    <select id="getFilesByUserId" resultType="com.nus.zkk.bodhifiles_system.entity.FileInfo">
        SELECT *
        FROM file_info
        WHERE user_id = #{userId}
    </select>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, parent_id, tenant_id, revision, created_by, created_time, updated_by, updated_by, url, name, file_name, suffix, is_img, size, type, put_time, is_dir, source
    </sql>

</mapper>
